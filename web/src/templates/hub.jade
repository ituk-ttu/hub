.navbar.navbar-default.navbar-static-top
    .container-fluid
        .navbar-header
            button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target=".navbar-collapse")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="#") Hub | ITÜK
        .collapse.navbar-collapse
            ul.nav.navbar-nav
                li: a(ui-sref="hub.resourceList") Ressursid
                li(ng-if="currentUser.admin"): a(ui-sref="hub.applicationList") Avaldused
                li: a(ui-sref="hub.mentorList") Mentorid
                li: a(ui-sref="hub.userList") Kasutajad
            ul.nav.navbar-nav.navbar-right
                li.dropdown
                    a.dropdown-toggle(data-toggle="dropdown" role="button") {{currentUser.name}} #[span.caret]
                    ul.dropdown-menu(role="menu")
                        li: a(ui-sref="hub.settings") Sätted
                        li(ng-if="currentUser.canBeMentor"): a(ui-sref="hub.mentorProfile({id: currentUser.id})") Mentori profiil
                        li: a(ui-sref="auth") Logi välja
.container.content(ui-view)